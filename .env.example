# Proxmox MDX Documentation Generator Configuration
# Copy this file to .env and fill in your values

# Required: Proxmox host (IP address or hostname)
PROXMOX_HOST=192.168.1.100

# Authentication Method 1: API Token (RECOMMENDED - more secure)
# Format: USER@REALM!TOKENID=SECRET
# Example: root@pam!docs-token=12345678-1234-1234-1234-123456789abc
PROXMOX_API_TOKEN=

# Authentication Method 2: Username/Password (fallback)
# Only used if PROXMOX_API_TOKEN is not set
# Format: user@pam or user@pve
PROXMOX_USERNAME=
PROXMOX_PASSWORD=

# Optional: Output directory (default: output)
OUTPUT_DIR=output

# Optional: SSL certificate verification (default: false)
# Set to true if using valid SSL certificates
VERIFY_SSL=false

# ========================================
# Public Documentation / Redaction Settings
# ========================================
# Use these flags when generating documentation for public consumption.
# Set to 'true' to redact sensitive information, 'false' to include full details.
# All flags default to 'false' if not set.

# Redact MAC addresses (XX:XX:XX:XX:XX:XX)
# Affects: Node network interfaces, VM NICs, Container NICs
REDACT_MAC_ADDRESSES=false

# Redact hardware serial numbers and WWN identifiers
# Affects: Disk serial numbers, WWN, hardware unique identifiers
REDACT_HARDWARE_SERIALS=false

# Redact API token details (token IDs, user associations)
# Affects: API token listings in users-permissions.mdx
REDACT_API_TOKENS=false

# Redact detailed CPU flags and capabilities
# Affects: CPU vulnerability/mitigation flags
REDACT_CPU_FLAGS=false

# Redact real usernames (converts to user1, user2, etc.)
# Affects: User listings and permissions (keeps root@pam)
# Note: Does NOT redact in firewall rules or other references
REDACT_USERNAMES=false

# Redact email addresses
# Affects: User email fields in users-permissions.mdx
REDACT_EMAIL_ADDRESSES=false
